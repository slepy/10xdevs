---
import { Navigation as NavigationComponent } from "./ui/Navigation";
import type { UserDTO } from "../types";

interface Props {
  user?: UserDTO | null;
  currentPath?: string;
  variant?: "public" | "authenticated" | "admin";
}

const { user, currentPath, variant } = Astro.props;
---

<NavigationComponent client:load user={user} currentPath={currentPath} variant={variant} />
