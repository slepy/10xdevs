---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div class="flex justify-between items-center mb-6">
  <h1 class="text-3xl font-bold">{title}</h1>
  {
    Astro.slots.has("actions") && (
      <div class="flex gap-2">
        <slot name="actions" />
      </div>
    )
  }
</div>
