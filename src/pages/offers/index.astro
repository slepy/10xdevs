---
import AuthenticatedLayout from "../../layouts/AuthenticatedLayout.astro";
import { isFeatureEnabled } from "../../features";
import { OffersPage } from "../../components/OffersPage";

export const prerender = false;

// Check if offers-list feature is enabled
if (!isFeatureEnabled("offers-list")) {
  return Astro.redirect("/");
}

// AuthenticatedLayout automatically requires authentication
---

<AuthenticatedLayout title="Oferty - BlindInvest">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <OffersPage client:load />
  </div>
</AuthenticatedLayout>
