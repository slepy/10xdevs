---
import AuthenticatedLayout from "../../layouts/AuthenticatedLayout.astro";
import { isFeatureEnabled } from "../../features";

export const prerender = false;

// Check if offers-list feature is enabled
if (!isFeatureEnabled("offers-list")) {
  return Astro.redirect("/");
}

// AuthenticatedLayout automatically requires authentication
---

<AuthenticatedLayout title="Oferty - BlindInvest">
  <div class="max-w-6xl mx-auto">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-2">Oferty inwestycyjne</h1>
      <p class="text-gray-600">Przeglądaj dostępne oferty i wybierz najlepszą dla siebie</p>
    </div>

    <div class="bg-white rounded-lg shadow-md p-8">
      <p class="text-gray-600 text-center">Tutaj będą wyświetlane dostępne oferty inwestycyjne.</p>
    </div>
  </div>
</AuthenticatedLayout>
