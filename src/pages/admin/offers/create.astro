---
import AdminLayout from "../../../layouts/AdminLayout.astro";
import CreateOfferForm from "../../../components/forms/CreateOfferForm.tsx";

export const prerender = false;

// AdminLayout automatically checks for admin role
---

<AdminLayout title="Utwórz nową ofertę">
  <div class="max-w-2xl">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-2">Utwórz nową ofertę</h1>
      <p class="text-gray-600">Wypełnij formularz poniżej, aby utworzyć nową ofertę inwestycyjną.</p>
    </div>

    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <CreateOfferForm client:load />
    </div>
  </div>
</AdminLayout>
