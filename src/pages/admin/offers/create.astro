---
import Layout from "../../../layouts/Layout.astro";
import CreateOfferForm from "../../../components/forms/CreateOfferForm.tsx";

export const prerender = false;

// TODO: Add middleware check for admin role
---

<Layout title="Utwórz nową ofertę">
  <main class="container mx-auto px-4 py-8">
    <div class="max-w-2xl mx-auto">
      <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900 mb-2">Utwórz nową ofertę</h1>
        <p class="text-gray-600">Wypełnij formularz poniżej, aby utworzyć nową ofertę inwestycyjną.</p>
      </div>

      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <CreateOfferForm client:load />
      </div>
    </div>
  </main>
</Layout>
