---
import "../styles/global.css";
import Navigation from "../components/Navigation.astro";
import type { UserDTO } from "../types";

interface Props {
  title?: string;
  user?: UserDTO | null;
  showNavigation?: boolean;
}

const { title = "BlindInvest", user = null, showNavigation = true } = Astro.props;

// Get user from middleware context when available
const contextUser = Astro.locals.user as UserDTO | null;
const finalUser = user ?? contextUser;
---

<!doctype html>
<html lang="pl" data-testid="html-root">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body data-testid="body">
    <div class="min-h-screen flex flex-col" data-testid="app-container">
      {showNavigation && <Navigation user={finalUser} currentPath={Astro.url.pathname} />}
      <slot />
    </div>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
