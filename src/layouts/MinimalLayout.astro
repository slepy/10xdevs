---
import BaseLayout from "./BaseLayout.astro";
import { requireAnonymous } from "../lib/auth/protection";

interface Props {
  title?: string;
  description?: string;
  showBackButton?: boolean;
}

const { showBackButton = false, ...rest } = Astro.props;

// Redirect logged-in users away from auth pages
requireAnonymous(Astro);
---

<BaseLayout {...rest}>
  <div
    class="min-h-screen flex items-center justify-center bg-gradient-to-br from-blue-50 via-white to-indigo-50"
    data-testid="minimal-layout"
  >
    {
      showBackButton && (
        <a
          href="/"
          class="absolute top-4 left-4 flex items-center gap-2 text-gray-600 hover:text-gray-900 transition-colors"
          data-testid="back-button"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path
              fill-rule="evenodd"
              d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z"
              clip-rule="evenodd"
            />
          </svg>
          <span>Powr√≥t</span>
        </a>
      )
    }

    <div class="w-full max-w-md px-4" data-testid="minimal-content">
      <slot />
    </div>
  </div>
</BaseLayout>
